#include<stdio.h>
#include<conio.h>
void main()
{
	//declare and intialize the variables
	int num,rem,sum=0,i;
	//take an input from the user
	printf("enter a number\n");
	scanf("%d",&num);
	//find all divisors and add them
	for(i=1;i<num;i++)
	{
	rem=num%i;
		 
	sum=sum+i;
}
 if(rem==0)
if(sum==num)
printf("x=%d is a perfect number");
getch();
        printf("x=%d is not a perfect number");
	getch();

}
